{
  "friendly_name" : "Roambee",
  "device_type" : "oic.d.roambee",
  "ocf_base_path" : "~",
  "implementation_paths" : [
    "/iot-lite",
    "/iot",
    "~/new-imp"
  ],
  "platforms" : [
    "linux",
    "windows",
    "android"
  ],
  "device_description" : [
    {
      "path" : "/temperature",
      "rt"   : [ "oic.r.temperature" ],
      "if"   : ["oic.if.s", "oic.if.baseline" ],
      "remove_properties" : [ "range", "value", "step" , "id", "precision" ]
    },
    {
      "path" : "/geolocation",
      "rt"   : [ "oic.r.sensor.geolocation" ],
      "if"   : ["oic.if.s", "oic.if.baseline" ],
      "remove_properties" : [ "range", "value", "accuracy", "altitudeAccuracy", "heading", "speed", "step" , "id", "prec
ision" ]
    },
    {
      "path" : "/oic/p",
      "rt"   : [ "oic.wk.p" ],
      "if"   : ["oic.if.baseline", "oic.if.r" ],
      "remove_properties" : [ "n", "range", "value", "step", "precision", "vid"  ]
    }
  ]
}
